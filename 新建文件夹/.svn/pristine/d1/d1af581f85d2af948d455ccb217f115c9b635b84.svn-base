.search .page-content {
  padding-top:72px;
}

.nav-hd {
  margin:7.5px 0;
  margin-left:10px;
  position: relative;
}
.nav-hd>.btn-hd {
  display: block;
  height:25px;
  line-height: 25px;
  color:#273538;
}
.nav-hd>.btn-hd>.icon {
  font-size: 20px;
  color: #FFF;
  position: absolute;
  left: 2px;
  top: 50%;
  margin-top: -10px;
}

.specialimage {
  padding:20px 25px 0;
}
.specialimage>img {
  width:100%;
}

.apps-item {
  display:inline-block;
  height: 91px;
  padding:18px 0;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
  position: relative;
}
@media screen and (max-width: 1400px) {
  .apps-item {
    width:50%;
  }
  .apps-item:nth-child(2n) {
    border-right: 0;
  }
}
@media screen and (min-width: 1400px) and (max-width: 1800px) {
  .apps-item {
    width:33.333%;
  }
  .apps-item:nth-child(3n) {
    border-right: 0;
  }
}
@media screen and (min-width: 1800px) and (max-width: 2200px) {
  .apps-item {
    width:25%;
  }
  .apps-item:nth-child(4n) {
    border-right: 0;
  }
}
@media screen and (min-width: 2200px) and (max-width: 2600px) {
  .apps-item {
    width:20%;
  }
  .apps-item:nth-child(5n) {
    border-right: 0;
  }
}
@media screen and (min-width: 2600px) {
  .apps-item {
    width:16.666%;
  }
  .apps-item:nth-child(6n) {
    border-right: 0;
  }
}
.apps-item:hover {
  transition: 0.2s;
  box-shadow: inset 0 0 10px #e6e6e6;
  background: #f8f8f8;
}
.apps-item>.apps-item-icon {
  width: 54px;
  height: 54px;
  border:1px solid rgba(0, 0, 0, 0.08);
  border-radius: 12px;
  background:url(../../assets/app-default.png) no-repeat center center;
  background-size:100% 100%;
  overflow: hidden;
  position: absolute;
  left: 24px;
  top: 50%;
  margin-top: -27px;
}
.apps-item>.apps-item-icon > img {
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
  left:0;
  top:0;
}
.apps-item > p {
  max-width: calc(100% - 190px);
  margin-left: 98px;
  line-height: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.apps-item > p.apps-item-name {
  color:#333;
  position: relative;
  top: -3px;
}
.apps-item > p.apps-item-name>.hd {
  display: inline-block;
  width:20px;
  height:11px;
  background:#00c658;
  border-radius: 2px;
}
.apps-item.hd > p.apps-item-name>.hd::before {
  content: "HD";
  display: block;
  width:20px;
  height:11px;
  line-height: 11px;
  text-align: center;
  color:#FFF;
  font-size:9px;
}
.apps-item > p.apps-item-info {
  color:#AAA;
  margin-top:4px;
}
.apps-item > p.apps-item-slogan {
  color:#888;
  margin-top:8px;
}
.apps-item >app-app-download-button {
  position: absolute;
  right: 24px;
  top: 50%;
  margin-top: -12px;
}

